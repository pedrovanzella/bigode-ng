<h1>Log in</h1>  
  
<%= form_tag sessions_path, :html => { :class => 'form-horizontal' } do %>  
  <fieldset>
    <legend>Log in</legend>
    <div class="control-group">
      <%= label_tag :email, nil, :class => 'control-label' %>
      <div class="controls">
        <%= text_field_tag :email, params[:email], :class => 'text_field' %>
      </div>
    </div>

    <div class="contol-group">
      <%= label_tag :password, nil, :class => 'control-label' %>
      <div class="controls">
        <%= password_field_tag :password, nil, :class => 'text_field' %>  
      </div>
    </div>

    <div class="form-actions">
      <%= submit_tag nil, :class => 'btn btn-primary' %>
    </div>
  </fieldset>
<% end %>  
